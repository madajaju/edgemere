                     createlet()
            }
                Service o--> "1" Stack : stack
                        Service *--> "n" Servicelet : servicelets
                        Service o--> "n" Service : children
                        Service o--> "1" Service : parent
                        Service o--> "1" PolicyCollection : policies
            
    
